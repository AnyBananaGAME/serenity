{
  "name": "serenityjs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "watch": "turbo watch",
    "build": "turbo build",
    "build:pkgs": "turbo build --filter='./packages/*'",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "new": "turbo gen",
    "commitlint": "commitlint --edit",
    "version": "yarn changeset version",
    "version:beta": "yarn changeset version snapshot beta",
    "publish": "yarn changeset publish",
    "publish:beta": "yarn changeset publish --no-git-tag --tag beta"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-angular": "^19.1.0",
    "@serenityjs/eslint-config": "workspace:*",
    "@serenityjs/typescript-config": "workspace:*",
    "@turbo/gen": "^1.12.5",
    "@types/cross-spawn": "^6.0.6",
    "@yarnpkg/core": "^4.0.3",
    "cross-spawn": "^7.0.3",
    "husky": "^9.0.11",
    "json5": "^2.2.3",
    "pinst": "^3.0.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "docs",
    "launcher",
    "packages/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  }
}
