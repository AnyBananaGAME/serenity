{
	"private": true,
	"name": "@serenityjs/monorepo",
	"repository": "https://github.com/SerenityJS/serenity.git",
	"license": "./LICENSE",
	"type": "module",
	"workspaces": [
		"packages/nbt",
		"packages/protocol",
		"packages/serenity"
