{
  "name": "serenity",
  "packageManager": "yarn@4.5.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:pkgs": "turbo build --filter='./packages/*'",
    "lint": "turbo lint",
    "clean": "rimraf -g '**/{dist,node_modules}' || true",
    "running-top-level-from-any-directory": "yarn run -T ..."
  },
  "devDependencies": {
    "@turbo/gen": "2.2.3",
    "rimraf": "6.0.1",
    "turbo": "2.2.3"
  },
  "engines": {
    "node": ">= 22.0.0"
  },
  "workspaces": [
    "packages/*",
    "devapp"
  ]
}
