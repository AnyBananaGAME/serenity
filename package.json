	},
	"packageManager": "yarn@4.1.0",
	"engines": {
		"node": ">=18.0.0",
		"yarn": ">=4.0.0",
		"npm": "please use yarn instead of npm"
	},
	"devDependencies": {
		"@serenityjs/bedrock-protocol": "^1.0.0",
		"@serenityjs/serenity": "^1.0.0",
		"@types/node": "^20.11.16",
		"cross-env": "^7.0.3",
		"eslint": "^8.56.0",
		"eslint-config-neon": "^0.1.57",
		"eslint-formatter-pretty": "^6.0.0",
		"nodemon": "^3.0.2",
		"prettier": "^3.1.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	}
}
