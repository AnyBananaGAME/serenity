{
  "$schema": "https://typedoc.org/schema.json",
  "name": "SerenityJS",
  "customTitle": "SerenityJS",
  "entryPoints": [
    "packages/*"
  ],
  "entryPointStrategy": "packages",
  "excludeExternals": true,
  "excludeInternal": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "externalPattern": [
    "**/node_modules/**",
    ".*packages(/[^/]+)/.*"
  ],
  "footerLastModified": true,
  "out": "./dist",
  "plugin": [
    "typedoc-material-theme",
    "typedoc-plugin-extras",
    "typedoc-plugin-merge-modules",
    "typedoc-plugin-rename-defaults"
  ],
  "exclude": [
    "**/node_modules/**",
    "node_modules/**"
  ],
  "projectDocuments": [
    "./README.md",
    "./docs/*.md",
  ],
  "readme": "./README.md",
  "themeColor": "#8560e9",
  "titleLink": "https://serenityjs.net/",
  "tsconfig": "./packages/internal-config/typescript/tsconfig.base.json",
  "mergeModulesRenameDefaults": true,
  "mergeModulesMergeMode": "module",
}